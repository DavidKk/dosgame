{
  "name": "dosgame",
  "version": "1.0.0",
  "description": "Dos game for browser",
  "author": "DavidJones <qowera@qq.com>",
  "license": "MIT",
  "husky": {
    "hooks": {  
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "scripts": {
    "tslint": "tslint --config ./tslint.json --fix './src/**/*.ts'",
    "lint": "npm run tslint",
    "test": "npm run lint",
    "develop": "rimraf ./dist ./.cache && parcel ./src/index.html --no-hmr",
    "release": "rimraf ./dist ./.cache && parcel build ./src/index.html --public-url /dosgame/",
    "start": "npm run develop"
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "eruda": "^1.5.4",
    "stats-js": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "postcss-pxtorem": "^4.0.1",
    "rimraf": "^2.6.3",
    "sass": "^1.16.0",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "staticFiles": {
    "staticPath": "src/vendors"
  }
}
